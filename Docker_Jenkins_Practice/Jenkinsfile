pipeline {
    agent any

    environment {
        IMAGE_NAME = "hello-devops"
        CONTAINER_NAME = "hello-devops-container"
        PORT = "5000"
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/<your-repo>/hello-devops-app.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh "docker build -t ${IMAGE_NAME} ."
                }
            }
        }

        stage('Run Container') {
            steps {
                script {
                    // Stop any previous container
                    sh "docker rm -f ${CONTAINER_NAME} || true"
                    // Run the new one
                    sh "docker run -d -p ${PORT}:5000 --name ${CONTAINER_NAME} ${IMAGE_NAME}"
                }
            }
        }

        stage('Verify Running') {
            steps {
                script {
                    sh "sleep 5"
                    sh "curl -f http://localhost:${PORT}"
                }
            }
        }
    }

    post {
        success {
            echo '✅ Build and container run successful!'
        }
        failure {
            echo '❌ Build or container failed.'
        }
    }
}
